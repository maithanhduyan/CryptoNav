{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create Project Structure",
      "type": "shell",
      "command": "python",
      "args": ["${workspaceFolder}/.tools/project_analyzer.py", "${file}"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Clear Python Cache",
      "type": "shell",
      "command": "find . -type d -name '__pycache__' -exec rm -r {} +",
      "windows": {
        "command": "Get-ChildItem -Path . -Recurse -Directory -Filter __pycache__ | Remove-Item -Recurse -Force",
        "options": {
          "shell": {
            "executable": "powershell.exe",
            "args": ["-NoProfile", "-Command"]
          }
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Build Docker Image",
      "type": "shell",
      "command": "docker build -t cryptonav-api:lastest .",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
